<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="textBox" TargetType="TextBox">
        <Setter Property="Width" Value="460"/>
        <Setter Property="Height" Value="65"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <TextBox BorderBrush="#0EAB00" BorderThickness="2" Background="Transparent" Padding="2"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="OtpTextBox" TargetType="TextBox">
        <Setter Property="Width" Value="140"/>
        <Setter Property="Height" Value="170"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <TextBox BorderBrush="#0EAB00" BorderThickness="2" Background="White" Padding="2"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

